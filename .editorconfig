root = true

[*]
# Set default charset
charset = utf-8

# Indentation and spacing
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Unity-specific settings
[*.cs]
# C# files
indent_size = 4
indent_style = tab
csharp_new_line_before_open_brace = none

[*.shader]
# Shader files
indent_size = 2
indent_style = space

# Exclude directories and files
[Library/**]
[Temp/**]
[Obj/**]